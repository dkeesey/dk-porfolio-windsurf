---
import Layout from '../layouts/Layout.astro';
import TypographyDemo from '../components/TypographyDemo';

---

<Layout title="Design System | Dean Keesey">
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <div class="mb-12">
        <h1 class="text-4xl font-extrabold text-gray-900 mb-4">Design System</h1>
        <p class="text-xl text-gray-600">
          A comprehensive guide to our design system components and patterns.
        </p>
      </div>
      
      <div class="space-y-16">
        <section id="typography" class="bg-white rounded-lg shadow-lg p-8">
          <TypographyDemo client:load />
        </section>
        
        <!-- More sections will be added here as we build out the design system -->
      </div>
    </div>
  </div>
</Layout>
