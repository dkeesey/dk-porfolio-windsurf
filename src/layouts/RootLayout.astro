---
import '@/styles/globals.css';
import { ViewTransitions } from 'astro:transitions';
import PostHogAnalytics from '@/components/analytics/PostHogAnalytics.astro';
import GoogleAnalytics from '@/components/analytics/GoogleAnalytics.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Dean Keesey - Full Stack Developer',
  description = 'Full Stack Developer specializing in modern web development with React, TypeScript, and Node.js',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />
    <GoogleAnalytics />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot />
    <PostHogAnalytics />
  </body>
</html>
