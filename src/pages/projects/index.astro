---
import Layout from '@/components/layout/Layout.astro';
import { Container } from '@/components/ui/container';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import type { SEOProps } from '@/types';
import type { ReactNode } from 'react';

const seo: SEOProps = {
  title: "Projects - Dean Keesey",
  description: "Explore my portfolio of full-stack development projects, featuring modern web applications and technical solutions.",
  type: "website" as const
};

const projects = await getCollection('projects');
const categories = [...new Set(projects.flatMap((p: CollectionEntry<'projects'>) => p.data.categories as string[]))];

// Sort projects by date (fallback to current date if no publishDate)
const sortedProjects = projects.sort((a: CollectionEntry<'projects'>, b: CollectionEntry<'projects'>) => {
  const dateA = a.data.publishDate || new Date();
  const dateB = b.data.publishDate || new Date();
  return dateB.getTime() - dateA.getTime();
});
---

<Layout {seo}>
  <Container as="main" className="py-12">
    <div class="space-y-8">
      <header class="space-y-4">
        <h1 class="text-4xl font-bold">Projects</h1>
        <p class="text-xl text-muted-foreground">
          A collection of my recent work and technical projects.
        </p>
      </header>

      <div class="flex gap-2 flex-wrap">
        {categories.map((category) => (
          <Badge variant="outline" data-category={category}>
            {category as ReactNode}
          </Badge>
        ))}
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {sortedProjects.map((project: CollectionEntry<'projects'>) => (
          <Card class="group hover:shadow-lg transition-shadow">
            <a href={`/projects/${project.slug}`} class="block p-6">
              {project.data.image && (
                <div class="aspect-video overflow-hidden rounded-t-lg">
                  <img
                    src={project.data.image}
                    alt={`${project.data.title} preview`}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform"
                  />
                </div>
              )}
              <CardHeader>
                <CardTitle>{project.data.title}</CardTitle>
                <CardDescription>{project.data.description}</CardDescription>
              </CardHeader>
              <CardContent>
                <div class="mt-4 flex flex-wrap gap-2">
                  {project.data.technologies.map((tech: string) => (
                    <Badge variant="secondary">{tech as ReactNode}</Badge>
                  ))}
                </div>
              </CardContent>
            </a>
          </Card>
        ))}
      </div>
    </div>
  </Container>
</Layout>

<script>
  // Client-side filtering logic
  const badges = document.querySelectorAll('[data-category]');
  const projects = document.querySelectorAll('[data-categories]');

  badges.forEach(badge => {
    badge.addEventListener('click', () => {
      const category = badge.getAttribute('data-category');
      if (!category) return;
      
      projects.forEach(project => {
        const categories = project.getAttribute('data-categories')?.split(',') || [];
        project.classList.toggle('hidden', !categories.includes(category));
      });
    });
  });
</script> 